<div class="table-responsive">
    <input id="myInput" onkeyup="tabela_quadro()" placeholder="MATRICULA" class="input-sm form-control search-input" type="text" style="margin-left: -1px; width: 210px; margin-bottom:2%; float: left;">
    <button id="buttone" style="background-color: transparent; border: none; outline: 0; float: right;">
        <img src="images/excel_cinza.svg" style="height: 25px; opacity: 85%;">
    </button>
    <table id="tabela_quadro" class="table table-striped table-hover table-conf">
        <thead>
            <tr style="color: #fff; font-weight: bold; text-transform: uppercase; background-color: #19022A; text-align: center; border-bottom: 1px solid #e1ab91 !important;">
                <th style="min-width: 50px;">-</th>
                <th>
                    @Html.DisplayNameFor(model => model.Matricula)
                </th>
                <th style="min-width: 250px">
                    @Html.DisplayNameFor(model => model.Funcionario)
                </th>
                <th style="min-width: 50px">
                    @Html.DisplayNameFor(model => model.Situacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celula)
                </th>
                <th style="min-width: 120px">
                    @Html.DisplayNameFor(model => model.Onda)
                </th>
                <th style="min-width: 50px">
                    @Html.DisplayNameFor(model => model.Ps)
                </th>
                <th style="min-width: 50px">
                    @Html.DisplayNameFor(model => model.Logid)
                </th>
                <th style="min-width: 210px">
                    @Html.DisplayNameFor(model => model.Supervisor)
                </th>
                <th style="min-width: 210px">
                    @Html.DisplayNameFor(model => model.Coordenador)
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    <a class="btn btn-btn-primary btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Matricula">Editar</a>
                    @*<a class="btn btn-outline-success btn-sm" style="min-width: 50px"  asp-action="Details" asp-route-id="@item.Matricula">Detalhes</a> |*@
                    @*<a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Matricula">Deletar</a>*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Matricula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcionario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Situacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Onda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ps)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Logid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supervisor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coordenador)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>